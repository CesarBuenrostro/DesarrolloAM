<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_marginHorizontal="6dp"
    android:background="@drawable/itembox_shop">
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/product_size"
        app:layout_constraintStart_toStartOf="parent"
        android:text="nombreProducto"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/add_cart"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="$000.00"
        android:textColor="#8B6C40"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/add_cart"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Talla M"
        android:textSize="14dp"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/add_cart"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@null"
        android:background="@drawable/button_design2"
        android:textSize="12dp"
        android:text="Agregar al carrito"
        />

</androidx.constraintlayout.widget.ConstraintLayout>