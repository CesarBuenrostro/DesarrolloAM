<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoDAM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D47288</item>
        <item name="colorPrimaryVariant">#8338EC</item>
        <item name="colorOnPrimary">#FFFFFA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3A86FF</item>
        <item name="colorSecondaryVariant">#FFBE0B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProyectoDAM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProyectoDAM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProyectoDAM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>